<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
	backupStaticAttributes="false"
	syntaxCheck="true"
	colors="true"
	bootstrap="bootstrap.php"
	processIsolation="false"
	stopOnFailure="false"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	>
	<testsuites>
		<testsuite name="K Test Suite">
			<directory>./</directory>
		</testsuite>
	</testsuites>
	<filter>
		<whitelist>
		<directory>../Core/</directory>
        <!--directory>../Core/Container/</directory>
        <directory>../Core/Core/</directory>
        <directory>../Core/Http/</directory>
        <directory>../Core/Routing/</directory>
        <directory>../Core/Util/</directory-->
		</whitelist>
	</filter>
</phpunit>
